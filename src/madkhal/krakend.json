{
  "version": 3,
  "name": "Bayt al Hikmah",
  "port": 8080,
  "cache_ttl": "300s",
  "timeout": "3000ms",
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE"],
      "allow_headers": ["Content-Type", "Authorization"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/sources",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/sources",
          "host": ["http://maktba:80"]
        }
      ]
    },
    {
      "endpoint": "/v1/sources",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/sources",
          "host": ["http://maktba:80"]
        }
      ]
    },
    {
      "endpoint": "/v1/sources/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/sources/{id}",
          "host": ["http://maktba:80"]
        }
      ]
    },
    {
      "endpoint": "/auth/{rest}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/{rest}",
          "host": ["http://kratos:4433"]
        }
      ]
    },
    {
      "endpoint": "/auth/{rest}",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/{rest}",
          "host": ["http://kratos:4433"]
        }
      ]
    }
  ]
}
