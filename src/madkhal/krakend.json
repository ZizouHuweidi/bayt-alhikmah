{
  "version": 3,
  "name": "Bayt al Hikmah",
  "port": 8080,
  "cache_ttl": "300s",
  "timeout": "3000ms",
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE"],
      "allow_headers": ["Content-Type", "Authorization"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/sources",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/sources",
          "host": ["http://maktba:80"]
        }
      ]
    },
    {
      "endpoint": "/v1/sources",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/sources",
          "host": ["http://maktba:80"]
        }
      ]
    },
    {
      "endpoint": "/v1/sources/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/sources/{id}",
          "host": ["http://maktba:80"]
        }
      ]
    },
    {
      "endpoint": "/auth/self-service/registration/api",
      "method": "GET",
      "output_encoding": "no-op",
      "input_query_strings": ["*"],
      "backend": [
        {
          "url_pattern": "/self-service/registration/api",
          "host": ["http://kratos:4433"],
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/auth/self-service/login/api",
      "method": "GET",
      "output_encoding": "no-op",
      "input_query_strings": ["*"],
      "backend": [
        {
          "url_pattern": "/self-service/login/api",
          "host": ["http://kratos:4433"],
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/auth/self-service/registration",
      "method": "POST",
      "output_encoding": "no-op",
      "input_query_strings": ["*"],
      "backend": [
        {
          "url_pattern": "/self-service/registration",
          "host": ["http://kratos:4433"],
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/auth/self-service/login",
      "method": "POST",
      "output_encoding": "no-op",
      "input_query_strings": ["*"],
      "backend": [
        {
          "url_pattern": "/self-service/login",
          "host": ["http://kratos:4433"],
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/auth/sessions/whoami",
      "method": "GET",
      "output_encoding": "no-op",
      "input_query_strings": ["*"],
      "backend": [
        {
          "url_pattern": "/sessions/whoami",
          "host": ["http://kratos:4433"],
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/auth/health/ready",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/health/ready",
          "host": ["http://kratos:4433"],
          "encoding": "no-op"
        }
      ]
    }
  ]
}
