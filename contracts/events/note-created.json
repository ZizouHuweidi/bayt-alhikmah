{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Note Created Event",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "aggregate_type",
    "aggregate_id",
    "timestamp",
    "data"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "enum": ["note.created"]
    },
    "aggregate_type": {
      "type": "string",
      "enum": ["Note"]
    },
    "aggregate_id": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "data": {
      "type": "object",
      "required": ["id", "user_id", "content", "content_type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "user_id": {
          "type": "string",
          "format": "uuid"
        },
        "source_id": {
          "type": "string",
          "format": "uuid"
        },
        "content": {
          "type": "string"
        },
        "content_type": {
          "type": "string",
          "enum": ["note", "annotation", "quote", "summary", "reflection"]
        },
        "is_public": {
          "type": "boolean"
        },
        "annotations": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
