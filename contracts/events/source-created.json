{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Source Created Event",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "aggregate_type",
    "aggregate_id",
    "timestamp",
    "data"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "enum": ["source.created"]
    },
    "aggregate_type": {
      "type": "string",
      "enum": ["Source"]
    },
    "aggregate_id": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "data": {
      "type": "object",
      "required": ["id", "title", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "title": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["book", "paper", "podcast", "video", "article", "essay"]
        },
        "description": {
          "type": "string"
        },
        "author_id": {
          "type": "string",
          "format": "uuid"
        },
        "publisher": {
          "type": "string"
        },
        "isbn": {
          "type": "string"
        },
        "doi": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "external_id": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "published_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
